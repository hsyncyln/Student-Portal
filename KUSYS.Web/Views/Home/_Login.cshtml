@model UserLoginModel

<head>
	
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
	<link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div class="d-flex justify-content-center h-100">
			<div class="card">
				<div class="card-header">
					<h3>Giriş Yap</h3>
				
				</div>
				<div class="card-body">
					<form asp-action="Login">
						@Html.AntiForgeryToken()
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div>
							<span asp-validation-for="UserName" class="text-danger"></span> <br />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input asp-for="UserName" type="text" class="form-control" placeholder="@Html.DisplayNameFor(x=> x.UserName)">
						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input asp-for="Password" type="password" class="form-control" placeholder="@Html.DisplayNameFor(x=> x.Password)">
						</div>
					
						<div class="form-group">
							<input type="submit" value="Login" class="btn float-right login_btn">
						</div>
					</form>
				</div>
				
			</div>
		</div>
	</div>
</body>

